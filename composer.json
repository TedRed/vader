{
    "name": "timbrown007/reactphp-boilerplate",
    "authors": [
        {
            "name": "Timothy Brown",
            "email": "timbrown007@hotmail.com"
        }
    ],
    "require": {
        "php": ">=7.3.0",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-ldap": "*",
        "ext-mbstring": "*",
        "ext-soap": "*",
        "ext-xml": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "react/react": "^1.0",
        "react/http": "^0.8.6",
        "nikic/fast-route": "^1.3",
        "respect/validation": "^2.0",
        "react/socket": "^1.4",
        "symfony/dependency-injection": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Vader\\": "vader/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "3.*"
    }
}
